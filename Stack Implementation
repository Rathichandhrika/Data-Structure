#include <iostream>
using namespace std;

#define MAX 100

class Stack {
    int arr[MAX];
    int top;

public:
    Stack() {
        top = -1;
    }

    bool isEmpty() {
        return (top == -1);
    }

    bool isFull() {
        return (top == MAX - 1);
    }

    void push() {
        int value;
        cout << "Enter the Value to Push: ";
        cin >> value;

        if (isFull()) {
            cout << "Stack Overflow!" << endl;
        } else {
            arr[++top] = value;
            cout << value << " is pushed to the stack" << endl;
        }
    }

    void pop() {
        if (isEmpty()) {
            cout << "Stack Underflow!" << endl;
        } else {
            cout << arr[top--] << " is popped from the stack" << endl;
        }
    }

    void peek() {
        if (isEmpty()) {
            cout << "Stack is empty!" << endl;
        } else {
            cout << "Top element is: " << arr[top] << endl;
        }
    }

    void display() {
        if (isEmpty()) {
            cout << "Stack is empty!" << endl;
        } else {
            cout << "Stack elements are: ";
            for (int i = top; i >= 0; i--)
                cout << arr[i] << " ";
            cout << endl;
        }
    }
};

int main() {
    Stack s;
    int choice;

    do {
        cout << "\n1. Push\n2. Pop\n3. Peek\n4. Display\n5. Exit\nEnter your choice: ";
        cin >> choice;

        switch (choice) {
        case 1: s.push(); break;
        case 2: s.pop(); break;
        case 3: s.peek(); break;
        case 4: s.display(); break;
        case 5: cout << "Exiting..."; break;
        default: cout << "Invalid Choice!"; break;
        }
    } while (choice != 5);

    return 0;
}
